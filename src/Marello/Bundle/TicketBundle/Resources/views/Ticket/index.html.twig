{% extends '@OroUI/actions/index.html.twig' %}
{% import '@OroUI/macros.html.twig' as UI %}
{% set gridName = 'marello-tickets-grid' %}
{% set pageTitle = 'marello.ticket.entity_plural_label'|trans %}

{% block navButtons %}
    {% import '@OroUI/macros.html.twig' as UI %}

    {% include '@OroImportExport/ImportExport/buttons_from_configuration.html.twig' with {
        'alias': 'marello_ticket'
    } %}

    {% if is_granted('marello_ticket_create') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path': path('marello_ticket_create'),
                'entity_label': 'marello.ticket.entity_label'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}