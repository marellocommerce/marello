{% extends '@OroUI/actions/update.html.twig' %}
{% import '@OroUI/macros.html.twig' as UI %}

{% oro_title_set({params : {'%title%': entity|oro_format_name|default('N/A'|trans), '%entityName%': 'marello.ticket.entity_label'|trans} }) %}

{# choose the appropriate action depending on whether a task is created or modified #}
{# this variable needs to be named formAction as this is what the base template expects #}
{% set formAction = form.vars.value.id ? path('marello_ticket_update', { 'id': form.vars.value.id }) : path('marello_ticket_create')  %}

{% block navButtons %}
    {{ parent() }}

    {{ UI.cancelButton(path('marello_ticket_index')) }}
    {% set html = UI.saveAndCloseButton({
        'route': 'marello_ticket_view',
        'params': {'id': '$id'}
    }) %}
    {% if is_granted('marello_ticket_create') %}
        {% set html = html ~ UI.saveAndNewButton({
            'route': 'marello_ticket_create'
        }) %}
    {% endif %}
    {% if entity.id or is_granted('marello_ticket_update') %}
        {% set html = html ~ UI.saveAndStayButton({
            'route': 'marello_ticket_update',
            'params': {'id': '$id'}
        }) %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock %}

{% block pageHeader %}
    {% if entity.id %}
        {% set breadcrumbs = {
            'entity':      entity,
            'indexPath':   path('marello_ticket_index'),
            'indexLabel': 'marello.ticket.entity_label'|trans,
            'entityTitle': entity|oro_format_name|default('N/A'|trans)
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'marello.ticket.entity_label'|trans}) %}
        {% include '@OroUI/page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set dataBlocks = [
        {
            'title': 'marello.sections.general'|trans,
            'subblocks': [
            {
                'data' : [
                form_row(form.namePrefix),
                form_row(form.firstName),
                form_row(form.middleName),
                form_row(form.lastName),
                form_row(form.nameSuffix),
                form_row(form.email),
                form_row(form.phone),
                form_row(form.owner),
                form_row(form.assignedTo),
                form_row(form.ticketStatus),
                form_row(form.ticketSource),
                form_row(form.ticketPriority)
            ]
            }
        ]
        },
        {
            'title': 'marello.sections.ticket'|trans,
            'subblocks': [
            {
                'data' : [
                form_row(form.category),
                form_row(form.subject),
                form_row(form.description),
                form_row(form.resolution)
            ]
            }
        ]
        }
    ] %}

    {% set data = {
        'formErrors': form_errors(form),
        'dataBlocks': dataBlocks
    }%}

    <div class="responsive-form-inner">
        {% set id = 'marello-ticket-edit' %}
        {{ parent() }}
    </div>
{% endblock content_data %}