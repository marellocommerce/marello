{% extends '@OroUI/actions/update.html.twig' %}
{% import '@OroUI/macros.html.twig' as UI %}

{% oro_title_set({params : {'%title%': entity|oro_format_name|default('N/A'|trans), '%entityName%': 'marello.ticket.category.label'|trans} }) %}

{% set formAction = form.vars.value.id ? path('marello_ticket_category_update', { 'id': form.vars.value.id }) : path('marello_ticket_category_create')  %}
{% set formAction = path('marello_ticket_category_create')  %}

{% block navButtons %}
    {{ parent() }}

    {{ UI.cancelButton(path('marello_ticket_category_index')) }}
    {% set html = UI.saveAndCloseButton({
        'route': 'marello_ticket_category_view',
        'params': {'id': '$id'}
    }) %}
    {% if is_granted('marello_ticket_category_create') %}
        {% set html = html ~ UI.saveAndNewButton({
            'route': 'marello_ticket_category_create'
        }) %}
    {% endif %}
    {% if entity.id or is_granted('marello_ticket_category_update') %}
        {% set html = html ~ UI.saveAndStayButton({
            'route': 'marello_ticket_category_update',
            'params': {'id': '$id'}
        }) %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock %}

{% block pageHeader %}
    {% if entity.id %}
        {% set breadcrumbs = {
            'entity':      entity,
            'indexPath':   path('marello_ticket_category_index'),
            'indexLabel': 'marello.ticket.category.label'|trans,
            'entityTitle': entity.name|default('N/A'|trans)
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'marello.ticket.category.label'|trans}) %}
        {% include '@OroUI/page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set dataBlocks = [
        {
            'title': 'marello.sections.general'|trans,
            'subblocks': [
            {
                'data' : [
                form_row(form.category)
            ]
            }
        ]
        },
    ] %}

    {% set data = {
        'formErrors': form_errors(form),
        'dataBlocks': dataBlocks
    }%}

    <div class="responsive-form-inner">
        {% set id = 'marello-ticket-category-edit' %}
        {{ parent() }}
    </div>
{% endblock content_data %}