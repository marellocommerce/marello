{% extends '@OroUI/actions/view.html.twig' %}
{% import '@OroDataGrid/macros.html.twig' as dataGrid %}
{% import '@OroUI/macros.html.twig' as UI %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity':      entity,
        'indexPath':   path('marelloenterprise_replenishmentorder_index'),
        'indexLabel': 'marelloenterprise.replenishment.replenishmentorder.entity_label'|trans,
        'entityTitle': entity.replOrderNumber
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'marello-replenishment-order-view' %}
    {% set data %}
        <div class="widget-content">
            <div class="row-fluid form-horizontal">
                <div class="responsive-block">
                    {{ UI.renderProperty('marelloenterprise.replenishment.replenishmentorder.repl_order_number.label'|trans, entity.replOrderNumber) }}
                    {{ UI.renderProperty('marelloenterprise.replenishment.replenishmentorder.origin.label'|trans, entity.origin) }}
                    {{ UI.renderProperty('marelloenterprise.replenishment.replenishmentorder.destination.label'|trans, entity.destination) }}
                    {{ UI.renderProperty('marelloenterprise.replenishment.replenishmentorder.execution_date_time.label'|trans, entity.executionDateTime|oro_format_datetime) }}
                    {% if entity.replOrderConfig %}
                        {{ UI.renderProperty(
                            'marelloenterprise.replenishment.replenishmentorderconfig.percentage.label'|trans,
                            entity.replOrderConfig.percentage ? ((entity.replOrderConfig.percentage/100)|oro_format_percent) : 'N/A'|trans
                        ) }}
                    {% endif %}
                    {{ UI.renderProperty('marelloenterprise.replenishment.replenishmentorder.description.label'|trans, entity.description) }}

                    {% set steps = marello_core_get_current_workflow_steps(entity) %}
                    {% for stepLabel, stepName in steps %}
                        {{ UI.renderProperty( stepLabel|trans({}, "workflows"), stepName|trans({}, "workflows") ) }}
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endset %}
    {% set items %}
        {{ dataGrid.renderGrid('marello-replenishment-order-items-grid', {'replOrderId': entity.id}) }}
    {% endset %}

    {% set dataBlocks = [
        {
            'title': 'General'|trans,
            'class': 'active',
            'subblocks': [
                { 'data' : [data] }
            ]
        },
        {
            'title': 'marelloenterprise.replenishment.replenishmentorderitem.entity_plural_label'|trans,
            'class': 'active',
            'subblocks': [
                { 'data' : [items] }
            ]
        }
    ] %}

    {% set data = { 'dataBlocks': dataBlocks } %}
    {{ parent() }}
{% endblock content_data %}
